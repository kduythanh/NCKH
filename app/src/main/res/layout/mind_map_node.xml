<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:id="@+id/MindMapNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:autofillHints="Main Idea"
        android:background="@drawable/mind_map_text_box_background"
        android:hint="Filler text"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minWidth="100dp"
        android:minHeight="48dp"
        android:minLines="1"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:longClickable="true"

        />

    <ImageView
        android:id="@+id/dragHandle"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/MindMapNode"
        android:layout_alignEnd="@id/MindMapNode"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_draggable_handle" />
</RelativeLayout>