<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:elevation="4dp"
    android:background="@drawable/mind_map_text_box_background">

    <!-- Add icon -->
    <ImageView
        android:id="@+id/addChildIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_add_child"
        android:padding="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/AddChild"/>

    <!-- Delete icon -->
    <ImageView
        android:id="@+id/deleteChildIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:padding="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/DeleteChild"/>

    <!-- Copy text icon -->
    <ImageView
        android:id="@+id/copyTextIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_copy"
        android:padding="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/CopyText"/>
</LinearLayout>