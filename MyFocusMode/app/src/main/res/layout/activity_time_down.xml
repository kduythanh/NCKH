<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity=""
    android:orientation="vertical"
    tools:context=".TimeDown">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTimeDown"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/lightBlue"
        android:theme="@style/ToolBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorPrimary" />



    <ImageView
        android:id="@+id/imageText"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:foregroundGravity="center"
        android:contentDescription="motivationImage"
        android:src="@drawable/dongluc"
        android:textColor="?android:attr/colorActivatedHighlight"
        app:layout_constraintStart_toStartOf="@+id/toolbarTimeDown"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTimeDown"
        />



    <!-- Character -->
    <LinearLayout
        android:id="@+id/characterClock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageText">
        <!-- hour -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical"
            >


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="20dp"
                android:maxLines="1"
                android:text="Hours"
                android:textColor="@color/black"
                android:textSize="11pt"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:maxLength="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />


        </LinearLayout>
        <!-- minute -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp"
                android:maxLines="1"
                android:text="Minutes"
                android:textColor="@color/black"
                android:textSize="11pt"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:maxLength="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />


        </LinearLayout>

        <!-- second -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp"
                android:maxLines="1"
                android:text="Seconds"
                android:textColor="@color/black"
                android:textSize="11pt"
                />

        </LinearLayout>

    </LinearLayout>


    <!-- Number -->
    <LinearLayout
        android:id="@+id/groupMinMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterClock">
        <!-- hour -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="20dp"
                android:maxLength="2"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:maxLength="1"
                android:maxLines="1"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />


        </LinearLayout>
        <!-- minute -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <Button-->
            <!--                android:id="@+id/buttonMinutePlus"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:backgroundTint="#666666"-->
            <!--                android:text="+"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="12pt" />-->

            <TextView
                android:id="@+id/textViewMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="20dp"
                android:maxLength="2"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />

            <!--            <Button-->
            <!--                android:id="@+id/buttonMinuteMinus"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:backgroundTint="#666666"-->
            <!--                android:text="-"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="12pt" />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:maxLength="1"
                android:maxLines="1"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />


        </LinearLayout>

        <!-- second -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="20dp"
                android:maxLength="2"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flStart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/item_color_accent_border_ripple_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/groupMinMax">

        <Button
            android:id="@+id/buttonResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:text="RESUME"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupMinMax"
            app:layout_constraintVertical_bias="0.413" />

    </FrameLayout>
